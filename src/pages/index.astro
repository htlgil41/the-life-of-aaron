---
import '../styles/global.css';
import Layout from "../layouts/Layout.astro"
import Welcome from '../components/welcome.astro';
import Navbar from '../components/navbar.astro';
import Aboutme from '../sections/aboutme.astro';
import Experience from '../sections/experience.astro';
import TittleCenter from '../components/tittleCenter.astro';
import Skills from '../sections/skills.astro';
import Coop from '../sections/coop.astro';
import Footer from '../components/footer.astro';
import GitHubProfile from '../sections/githubprofile.astro'
---

<Layout>
	<Navbar />
    <main class="max-w-6xl mx-auto px-6">
        <Welcome></Welcome>
        <Aboutme></Aboutme>

        <TittleCenter
          Tittle="Experiencia"
          Subtitle="Trayectoria Laboral"
        ></TittleCenter>

        <Experience></Experience>

        <Skills
          Lenguajes={[
            'Javascript',
            'typescript',
            'Go/Golang'
          ]}
          FrameworksBackends={[
            'Node.js / Express / NestJS',
            'REST APIs & GraphQL',
            'Ws WebSockets',
            'Gin Web For Golang'
          ]}
        ></Skills>

        <TittleCenter
          Tittle="Codigo por diversion y aprendizaje"
          Subtitle="Perfil de GitHub"
        ></TittleCenter>
        <GitHubProfile></GitHubProfile>

        <Coop></Coop>
    </main>

    <Footer></Footer>
</Layout>



<style>
  @keyframes fade-in {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-fade-in {
    animation: fade-in 0.8s ease-out forwards;
  }
</style>