---

interface Props{
    tech: string[];
    time: string;
    participation: string;
    dark: boolean;
}

const {
    tech,
    time,
    participation,
    dark
} = Astro.props;
---

{
    !dark
    ? (
        <div class="lg:col-span-4 bg-zinc-950 p-10 flex flex-col justify-between shadow-2xl">
            <div class="space-y-8">
                <div>
                    <h5 class="text-blue-500 text-[10px] font-black uppercase tracking-[0.2em] mb-4">
                        Info.
                    </h5>
                    <div class="space-y-4">
                        <div class="flex justify-between border-b border-white/5 pb-2">
                            <span class="text-xs text-slate-500 font-bold italic uppercase">Tiempo:</span>
                            <span class="text-xs text-white font-black">{time}</span>
                        </div>
                        <div class="flex justify-between border-b border-white/5 pb-2">
                            <span class="text-xs text-slate-500 font-bold italic uppercase">Participacion:</span>
                            <span class="text-xs text-white font-black">{participation}</span>
                        </div>
                    </div>
                </div>

                <div>
                    <h5 class="text-blue-500 text-[10px] font-black uppercase tracking-[0.2em] mb-4">
                        Stack.
                    </h5>
                    <div class="flex flex-wrap gap-2">
                        {tech.map((item) => (
                            <span class="px-3 py-1 bg-blue-500/10 border border-blue-500/20 text-blue-400 text-[11px] font-mono font-bold uppercase tracking-wider">
                                {item}
                            </span>
                        ))}
                    </div>
                </div>
            </div>
        </div>
    )
    : (
        <div class="lg:col-span-4 bg-slate p-10 flex flex-col justify-between bg-[#f2f2f2a9]">
            <div class="space-y-8">
                <div>
                    <h5 class="text-slate-400 text-[10px] font-black uppercase tracking-[0.2em] mb-4">
                        Info.
                    </h5>
                    <div class="space-y-4">
                        <div class="flex justify-between border-b border-slate-200 pb-2">
                            <span class="text-xs text-slate-500 font-bold italic uppercase">Tiempo:</span>
                            <span class="text-xs text-black font-black">{time}</span>
                        </div>
                        <div class="flex justify-between border-b border-slate-200 pb-2">
                            <span class="text-xs text-slate-500 font-bold italic uppercase">Participacion:</span>
                            <span class="text-xs text-black font-black">{participation}</span>
                        </div>
                    </div>
                </div>

                <div>
                    <h5 class="text-slate-400 text-[10px] font-black uppercase tracking-[0.2em] mb-4">
                        Stack.
                    </h5>
                    <div class="flex flex-wrap gap-2">
                        {tech.map((item) => (
                            <span class="px-3 py-1 border border-blue-300 text-black text-[11px] font-mono font-bold uppercase tracking-wider">
                                {item}
                            </span>
                        ))}
                    </div>
                </div>
            </div>
        </div>
    )
}