---
interface Props {
    Company: string;
    TimeCompany: string;
    Puesto: string;
    Task: string;
    Realized: string[];
    EndInfo: string;
    Url: string | null;
}

const {
    Company,
    TimeCompany,
    Puesto,
    Task,
    Realized,
    EndInfo,
    Url
} = Astro.props
---

<div class="group relative grid grid-cols-1 md:grid-cols-[1fr_2fr] gap-8 py-12 border-b border-gray-100 hover:bg-gray-50/50 transition-colors px-6">
    <div class="space-y-2">
      <span class="text-gray-400 font-black text-sm tracking-widest uppercase italic">{TimeCompany}</span>
      <h4 class="text-3xl font-black text-black leading-none uppercase">{Company}</h4>
    </div>
    
    <div class="space-y-6">
      <div>
        <h5 class="text-xl font-bold text-black uppercase tracking-tight mb-2">{Puesto}</h5>
        <p class="text-gray-500 leading-relaxed">
            {Task}
        </p>
      </div>
      
      <div class="space-y-8">
        <ul class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {Realized.map((v: string) => (
              <li class="flex items-start gap-2">
                  <span class="text-blue-600 font-bold">/</span>
                  <span class="text-sm text-gray-600 font-medium">
                      {v}
                  </span>
              </li>
          ))}
        </ul>
        
        {Url && (
            <div class="mt-12">
                <a 
                    href={Url} 
                    class="relative flex flex-col md:flex-row items-center justify-between p-8 bg-zinc-50 border border-zinc-300 rounded-2xl overflow-hidden transition-all duration-500 hover:border-blue-500 hover:shadow-2xl hover:shadow-blue-500/10 group/card"
                >
                    <div class="absolute inset-0 bg-linear-to-r from-blue-600 to-blue-700 translate-y-full group-hover/card:translate-y-0 transition-transform duration-500 ease-out"></div>
                    
                    <div class="relative z-10 mb-6 md:mb-0">
                        <p class="text-[13px] text-gray-400 font-bold uppercase tracking-widest mb-2 group-hover/card:text-blue-100 transition-colors">
                            {EndInfo}
                        </p>
                        <h4 class="text-2xl md:text-3xl font-black text-black leading-none uppercase group-hover/card:text-white transition-colors">
                            Explorar bit√°cora <br class="hidden md:block" /> detallada de proyectos
                        </h4>
                    </div>

                    <div class="relative z-10">
                        <div class="w-16 h-16 bg-white rounded-full flex items-center justify-center shadow-sm group-hover/card:scale-110 group-hover/card:rotate-12 transition-all duration-500">
                            <svg 
                                xmlns="http://www.w3.org/2000/svg" 
                                viewBox="0 0 24 24" 
                                fill="none" 
                                stroke="currentColor" 
                                stroke-width="3" 
                                stroke-linecap="round" 
                                stroke-linejoin="round" 
                                class="w-8 h-8 text-blue-600"
                            >
                                <path d="M5 12h14m-7-7 7 7-7 7"/>
                            </svg>
                        </div>
                    </div>

                    <div class="absolute right-[-5%] bottom-[-20%] text-8xl font-black text-black/5 group-hover/card:text-white/10 select-none transition-colors italic">
                        FULL_LOG
                    </div>
                </a>
            </div>
        )}
      </div>
    </div>
</div>