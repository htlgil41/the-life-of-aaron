---
interface Props{
    dark: boolean;
    index: number;
    title: string;
    category: string;
}

const {
    dark,
    index,
    title,
    category
} = Astro.props;
---

{
    !dark
    ? (
        <div class="lg:col-span-8 overflow-hidden bg-blue-600 border border-blue-500 relative group/img shadow-2xl shadow-blue-900/20">
            <div class="absolute inset-0 bg-linear-to-br from-blue-600 via-blue-700 to-blue-900 opacity-100"></div>

            <div class="relative w-full h-64 sm:h-80 md:h-96 lg:h-full min-h-87.5 flex items-end">
                
                <div class="absolute inset-0 opacity-20 pointer-events-none" 
                    style="background-image: radial-gradient(circle at 2px 2px, rgba(255, 255, 255, 0.4) 1px, transparent 0); background-size: 32px 32px;">
                </div>

                <div class="relative z-10 p-8 md:p-12 w-full">
                    <div class="flex flex-col md:flex-row items-baseline gap-6 mb-6">
                        <span class="text-6xl md:text-7xl font-black text-transparent bg-clip-text bg-linear-to-b from-white to-blue-200 leading-none filter drop-shadow-[0_10px_20px_rgba(0,0,0,0.2)]">
                           {index + 1}
                        </span>

                        <div class="space-y-6 relative group/btn-section">
                            <h2 class="text-2xl md:text-7xl font-black text-transparent bg-clip-text bg-linear-to-r from-white via-blue-200 to-white bg-size-[200%_auto] animate-gradient-text uppercase tracking-tighter leading-[0.8] drop-shadow-2xl">
                                {title}
                            </h2>
                            
                            <div class="flex flex-wrap items-center gap-6">
                                <div class="relative overflow-hidden">
                                    <span class="inline-block text-[10px] font-black uppercase tracking-[0.4em] text-blue-400 bg-blue-500/5 backdrop-blur-md px-4 py-2 border border-blue-500/30">
                                        {category}
                                    </span>
                                    <div class="absolute top-0 left-0 w-full h-0.5 bg-blue-400 animate-scan opacity-50"></div>
                                </div>

                                <div class="relative">
                                    <span class="absolute inset-0 rounded-full bg-blue-500 opacity-20 animate-ping-slow"></span>
                                    <span class="absolute inset-0 rounded-full bg-blue-400 opacity-10 animate-ping-slower"></span>

                                    <button 
                                        onclick={`document.getElementById('modal-${index}').showModal()`}
                                        class="relative group flex items-center gap-4 text-[12px] font-black uppercase tracking-[0.3em] text-white bg-blue-600 px-10 py-4 rounded-sm border-b-4 border-blue-800 active:border-b-0 active:translate-y-1 transition-all duration-150 overflow-hidden shadow-[0_0_50px_rgba(37,99,235,0.4)] hover:shadow-[0_0_70px_rgba(37,99,235,0.7)]"
                                    >
                                        <span class="relative z-10 flex items-center gap-2">
                                            Ver Detalles
                                        </span>

                                        <div class="absolute inset-0 bg-linear-to-r from-transparent via-white/40 to-transparent -translate-x-full group-hover:animate-flare"></div>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    )
    : (
        <div class="lg:col-span-8 overflow-hidden bg-zinc-950 border border-white/5 relative group/img shadow-2xl shadow-black">
            <div class="absolute inset-0 bg-linear-to-br from-zinc-950 via-zinc-900 to-blue-950/30 opacity-100"></div>

            <div class="relative w-full h-64 sm:h-80 md:h-96 lg:h-full min-h-87.5 flex items-end">
                
                <div class="absolute inset-0 opacity-10 pointer-events-none" 
                    style="background-image: radial-gradient(circle at 2px 2px, rgba(59, 130, 246, 0.5) 1px, transparent 0); background-size: 32px 32px;">
                </div>

                <div class="relative z-10 p-8 md:p-12 w-full">
                    <div class="flex flex-col md:flex-row items-baseline gap-6 mb-6">
                        <span class="text-6xl md:text-7xl font-black text-transparent bg-clip-text bg-linear-to-b from-white via-blue-400 to-blue-900 leading-none filter drop-shadow-[0_0_30px_rgba(59,130,246,0.3)]">
                            {index + 1}
                        </span>

                        <div class="space-y-6 relative group/btn-section">
                            <h2 class="text-5xl md:text-7xl font-black text-transparent bg-clip-text bg-linear-to-r from-white via-blue-200 to-white bg-size-[200%_auto] animate-gradient-text uppercase tracking-tighter leading-[0.8] drop-shadow-2xl">
                                {title}
                            </h2>
                            
                            <div class="flex flex-wrap items-center gap-6">
                                <div class="relative overflow-hidden">
                                    <span class="inline-block text-[10px] font-black uppercase tracking-[0.4em] text-blue-400 bg-blue-500/5 backdrop-blur-md px-4 py-2 border border-blue-500/30">
                                        {category}
                                    </span>
                                    <div class="absolute top-0 left-0 w-full h-0.5 bg-blue-400 animate-scan opacity-50"></div>
                                </div>

                                <div class="relative">
                                    <span class="absolute inset-0 rounded-full bg-blue-500 opacity-20 animate-ping-slow"></span>
                                    <span class="absolute inset-0 rounded-full bg-blue-400 opacity-10 animate-ping-slower"></span>

                                    <button 
                                        onclick={`document.getElementById('modal-${index}').showModal()`}
                                        class="relative group flex items-center gap-4 text-[12px] font-black uppercase tracking-[0.3em] text-white bg-blue-600 px-10 py-4 rounded-sm border-b-4 border-blue-800 active:border-b-0 active:translate-y-1 transition-all duration-150 overflow-hidden shadow-[0_0_50px_rgba(37,99,235,0.4)] hover:shadow-[0_0_70px_rgba(37,99,235,0.7)]"
                                    >
                                        <span class="relative z-10 flex items-center gap-2">
                                            Ver Detalles
                                        </span>

                                        <div class="absolute inset-0 bg-linear-to-r from-transparent via-white/40 to-transparent -translate-x-full group-hover:animate-flare"></div>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    )
}

<style>
    @keyframes gradient-text {
        0% { bg-position: 0% 50%; }
        100% { bg-position: 200% 50%; }
    }
    .animate-gradient-text {
        animation: gradient-text 4s linear infinite;
    }
    @keyframes flare {
        0% { transform: translateX(-150%); }
        100% { transform: translateX(150%); }
    }
    .group-hover\:animate-flare {
        animation: flare 0.8s ease-in-out forwards;
    }
    .animate-ping-slow {
        animation: ping 3s cubic-bezier(0, 0, 0.2, 1) infinite;
    }
    .animate-ping-slower {
        animation: ping 4s cubic-bezier(0, 0, 0.2, 1) infinite;
    }
    @keyframes scan {
        0% { top: 0%; }
        100% { top: 100%; }
    }
    .animate-scan {
        animation: scan 2s linear infinite;
    }
</style>